language = "cpp"
run="""
    runner_dir="${PWD}" \
    && cmake_build_dir="${runner_dir}_cmake" \
    && mkdir -p "${cmake_build_dir}" \
    && cd "${cmake_build_dir}" \
    && cmake \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_C_COMPILER=/usr/bin/gcc \
        -DCMAKE_CXX_COMPILER=/usr/bin/g++ \
        "${runner_dir}" \
    && cmake --build "${cmake_build_dir}" \
    && cd "${runner_dir}" \
    && "${cmake_build_dir}/output"
"""
